{
  "name": "@redotlabs/ui",
  "version": "1.1.0",
  "description": "UI components for Redot design system",
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/generate-exports.js",
    "build": "tsup && cp src/index.css dist/index.css",
    "build:fast": "tsup --no-dts && cp src/index.css dist/index.css",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./only-components": {
      "require": {
        "types": "./dist/only-components.d.cts",
        "default": "./dist/only-components.cjs"
      },
      "import": {
        "types": "./dist/only-components.d.ts",
        "default": "./dist/only-components.js"
      }
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "author": "redot",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redotlabs/design-system.git",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.23.24",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@redotlabs/themes": "workspace:*",
    "@redotlabs/tokens": "workspace:*",
    "@redotlabs/utils": "workspace:*",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.7.0",
    "clean-package": "^2.2.0",
    "prop-types": "^15.8.1"
  },
  "peerDependencies": {
    "@redotlabs/themes": ">=1.1.0",
    "@redotlabs/tokens": ">=1.0.0",
    "@redotlabs/utils": ">=1.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6"
  },
  "clean-package": "../../clean-package.config.json"
}
