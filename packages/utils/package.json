{
  "name": "@redotlabs/utils",
  "version": "2.0.0",
  "description": "Utils for design system",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:fast": "tsup --no-dts",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "author": "redot",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redotlabs/design-system.git",
    "directory": "packages/utils"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "clean-package": "^2.2.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "clean-package": "../../clean-package.config.json"
}
